{
    "manifest_version": 3,
    "name": "Extension Verifier",
    "version": "1.0",
    "description": "Verifies installed extensions and their permissions",
    "author": "Akash Dubey",
    "homepage_url": "https://verifyextensions.com/",
    "short_name": "ExtVerifier",
    "minimum_chrome_version": "88",
    "permissions": [
        "management",
        "tabs",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    }
}